<% layout("/layouts/boilerplate")%>
<body>
    <h2>Listing Details</h2>
    <ul>
        <li><img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 17rem;"/></li>
        <li><%= listing.title %></li>
        <li><%= listing.description %> </li>
        <li> &#8377; <%= listing.price.toLocaleString("en-IN") %> </li>
        <li><%= listing.location %> </li>
        <li><%= listing.country %> </li>

    </ul>
    <br>
    <a href="/listings/<%= listing._id%>/edit">Edit This Listing</a>
    <br><br />
    <form method="post" action="/listings/<%= listing._id%>?_method=DELETE">
        <button>Delete</button>
    </form>

    <!-- Pop-up script for update success -->
    <script>
        window.onload = function () {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get("updated") === "true") {
                alert("Update Successful!"); // Simple pop-up message
            }
        };
    </script>

</body>
