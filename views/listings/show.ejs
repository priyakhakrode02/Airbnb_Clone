<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3">
            <h2>Listing Details</h2>
    </div>        
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing_image"><br />
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br />
                        <%= listing.description %><br />
                        &#8377; <%= listing.price.toLocaleString("en-IN") %><br />
                        <%= listing.location %><br />
                        <%= listing.country %> 
                    </p>
                </div>
            </div>
            
            <div class="btns">
                <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 show-edit-btn">Edit</a>
                
                <form method="post" action="/listings/<%= listing._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-5 show-del-btn">Delete</button>
                </form>
                
            </div>
            


            <!--<ul>
                <li><%= listing.title %></li>
                <li><%= listing.description %> </li>
                <li> &#8377; <%= listing.price.toLocaleString("en-IN") %> </li>
                <li><%= listing.location %> </li>
                <li><%= listing.country %> </li>

            </ul>-->  

            <!-- Pop-up script for update success -->
            <script>
                window.onload = function () {
                    const urlParams = new URLSearchParams(window.location.search);
                    if (urlParams.get("updated") === "true") {
                        alert("Update Successful!"); // Simple pop-up message
                    }
                };
            </script>
</div>
